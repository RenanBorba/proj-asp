@model PagedList.IPagedList<ProjetoEstagioSupDDD.Dominio.Entidades.Fornecedor>

@{
    ViewBag.Title = "Listagem Fornecedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-heading">
    <h2>Relatório Listagem de Fornecedores</h2>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th>
                            Descrição Fornecedor
                        </th>
                        <th>
                            Nome Responsável
                        </th>
                        <th>
                            Inscrição Estadual
                        </th>
                        <th>
                            Tipo Pessoa
                        </th>
                        <th>
                            CPF
                        </th>
                        <th>
                            CNPJ
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Data Cadastro
                        </th>
                        <th>
                            CEP
                        </th>
                        <th>
                            Endereço
                        </th>
                        <th>
                            Cidade
                        </th>
                        <th>
                            Complemento
                        </th>
                        <th>
                            Tipo Telefone
                        </th>
                        <th>
                            Número Telefone
                        </th>
                        <th>
                            Acesso Whatsapp
                        </th>
                        <th>
                            Fornecedor Ativo
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DescricaoFornecedor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeResponsavel)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InscricaoEstadual)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoPessoa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cpf)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cnpj)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataCadastro)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cep)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Endereco)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cidade)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Complemento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoTelefone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumeroTelefone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AcessoWpp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FornecedorAtivo)
                            </td>
                        </tr>
                    }

                    <tr>
                        <td><b>@Model.Count registro(s) de @Model.TotalItemCount</b></td>
                        <td><a href="/Relatorios/ListagemFornecedor?gerarPDF=true"><b>GERAR PDF</b></a></td>
                    </tr>

                </table>
            </div>
        </div>

        @{
            if (Model.TotalItemCount != Model.Count)
            {
                <div class="row">
                    <div class="col-md-12">
                        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

                        @if (Model.HasPreviousPage)
                        {
                            @Html.ActionLink("<<", "ListagemFornecedor", new { pagina = 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter
                        })
                            @Html.Raw(" ");
                            @Html.ActionLink("< Anterior", "ListagemFornecedor", new { pagina = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter
                        })}

                        else
                        {
                            @:<<
                            @Html.Raw(" ");
                            @:< Anterior
                        }

                        @if (Model.HasNextPage)
                        {
                            @Html.ActionLink("Próxima >", "ListagemFornecedor", new { pagina = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                            @Html.Raw(" ");
                            @Html.ActionLink(">>", "ListagemFornecedor", new { pagina = Model.PageCount, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                        }
                        else
                        {
                            @:Próxima >
                            @Html.Raw(" ")
                            @:>>
                        }

                    </div>
                </div>
            }
        }
    </div>
</div>
