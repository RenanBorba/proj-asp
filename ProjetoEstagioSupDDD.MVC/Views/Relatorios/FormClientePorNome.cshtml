@model ProjetoEstagioSupDDD.Dominio.Entidades.Cliente

@{
    ViewBag.Title = "FormClientesPorNome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Relatório Cliente/Nome</h2>
    </div>
    <div class="panel-body">
        <form method="post" action="/Relatorios/ListagemClientePorNome" id="frmCliente" class="form-horizontal">         
            <div class="form-group">
                <label for="nome" class="col-sm-2 control-label">Nome:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="nome" name="nome" required>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Gerar Relatório</button>
                </div>
            </div>
        </form>
    </div>
</div>
