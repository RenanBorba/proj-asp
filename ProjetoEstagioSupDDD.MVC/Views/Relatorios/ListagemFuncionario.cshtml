@model PagedList.IPagedList<ProjetoEstagioSupDDD.Dominio.Entidades.Funcionario>

@{
    ViewBag.Title = "Listagem Funcionário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-heading">
    <h2>Relatório Listagem de Funcionários</h2>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <tr>
                        <th>
                            Nome
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Login
                        </th>
                        <th>
                            Senha
                        </th>
                        <th>
                            Tipo Telefone
                        </th>
                        <th>
                            Número Telefone
                        </th>
                        <th>
                            Acesso Whatsapp
                        </th>
                        <th>
                            Administrador
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Login)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Senha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoTelefone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumeroTelefone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AcessoWpp)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Administrador)
                            </td>
                        </tr>

                    }

                    <tr>
                        <td><b>@Model.Count registro(s) de @Model.TotalItemCount</b></td>
                        <td><a href="/Relatorios/ListagemFuncionario?gerarPDF=true"><b>GERAR PDF</b></a></td>
                    </tr>

                </table>
            </div>
        </div>

        @{
            if (Model.TotalItemCount != Model.Count)
            {
                <div class="row">
                    <div class="col-md-12">
                        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

                        @if (Model.HasPreviousPage)
                        {
                            @Html.ActionLink("<<", "ListagemFuncionario", new { pagina = 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter
                        })
                            @Html.Raw(" ");
                            @Html.ActionLink("< Anterior", "ListagemFuncionario", new { pagina = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter
                        })}

                        else
                        {
                            @:<<
                            @Html.Raw(" ");
                            @:< Anterior
                        }

                        @if (Model.HasNextPage)
                        {
                            @Html.ActionLink("Próxima >", "ListagemFuncionario", new { pagina = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                            @Html.Raw(" ");
                            @Html.ActionLink(">>", "ListagemFuncionario", new { pagina = Model.PageCount, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })
                        }
                        else
                        {
                            @:Próxima >
                            @Html.Raw(" ")
                            @:>>
                        }

                    </div>
                </div>
            }
        }
    </div>
</div>
