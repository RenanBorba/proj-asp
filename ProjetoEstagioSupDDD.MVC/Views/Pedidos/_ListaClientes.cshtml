@model IEnumerable<ProjetoEstagioSupDDD.MVC.Models.ClienteViewModel>

@if (Model.Count() > 0)
{
    <p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cep)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroTelefone)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="selecionar-cliente" cliente-id="@item.IdCliente">
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cep)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroTelefone)
                    </td>
                </tr>
            }

        </table>
    </p>

}
else
{
    <p>
        <h5>Nenhum cliente selecionado.</h5>
        <h6>Aguardo você por aqui em breve!</h6>
    </p>
}