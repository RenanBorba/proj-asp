@model IEnumerable<ProjetoEstagioSupDDD.MVC.Models.ClienteViewModel>

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clientes</h2>
<p>
    @Ajax.ActionLink("Novo Cliente", "Inserir", "Clientes", null, new AjaxOptions()
    {
        HttpMethod = "get",
        InsertionMode = InsertionMode.Replace
    })

    |@Ajax.ActionLink("Relatório Cliente por Período", "FormClientePorPeriodo", "Relatorios", null, new AjaxOptions()
    {
       HttpMethod = "get",
       InsertionMode = InsertionMode.Replace
    })

    |@Ajax.ActionLink("Relatório Cliente por Nome", "FormClientePorNome", "Relatorios", null, new AjaxOptions()
    {
      HttpMethod = "get",
      InsertionMode = InsertionMode.Replace
    })
</p>

<p>
    Pesquisar por Nome:
    @using (Html.BeginForm("Index", "Clientes", FormMethod.Get))
    {
        @Html.TextBox("Pesquisa")
        <input type="submit" class="btn-sm" value="Pesquisar" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoPessoa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cnpj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCadastro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cep)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Complemento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoTelefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroTelefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AcessoWpp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClienteAtivo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoPessoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCadastro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complemento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTelefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroTelefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcessoWpp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteAtivo)
            </td>
            <td>
                @Ajax.ActionLink("Alterar", "Alterar","Clientes",
                       new { id = item.IdCliente }, new AjaxOptions()
                       {
                           HttpMethod = "get",
                           InsertionMode = InsertionMode.Replace
                       })

                |@Ajax.ActionLink("Excluir", "Excluir", "Clientes",
              new { id = item.IdCliente}, new AjaxOptions()
              {
                  HttpMethod = "get",
                  InsertionMode = InsertionMode.Replace
              })
            </td>
        </tr>
    }

</table>
<hr />