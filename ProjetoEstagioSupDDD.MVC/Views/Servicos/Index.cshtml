@model IEnumerable<ProjetoEstagioSupDDD.MVC.Models.ServicoViewModel>

@{
    ViewBag.Title = "Serviços";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Serviços</h2>
<p>
    @Ajax.ActionLink("Novo Serviço", "Inserir", "Servicos", null, new AjaxOptions()
    {
        HttpMethod = "get",
        InsertionMode = InsertionMode.Replace
    })

    |@Ajax.ActionLink("Relatório Serviço por Descrição", "FormServico", "Relatorios", null, new AjaxOptions()
    {
        HttpMethod = "get",
        InsertionMode = InsertionMode.Replace
    })
</p>

<p>
    Pesquisar por Descrição:
    @using (Html.BeginForm("Index", "Servicos", FormMethod.Get))
    {
        @Html.TextBox("Pesquisa")
        <input type="submit" class="btn-sm" value="Pesquisar" />
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DescricaoServico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ObservacaoServico)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorServico)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoServico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ObservacaoServico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorServico)
            </td>
            <td>
                @Ajax.ActionLink("Alterar", "Alterar","Servicos",
                    new { id = item.IdServico }, new AjaxOptions()
                    {
                        HttpMethod = "get",
                        InsertionMode = InsertionMode.Replace
                    })

                |@Ajax.ActionLink("Excluir", "Excluir","Servicos",
                   new { id = item.IdServico }, new AjaxOptions()
                   {
                       HttpMethod = "get",
                       InsertionMode = InsertionMode.Replace
                   })
            </td>
        </tr>
    }
</table>
<hr />
