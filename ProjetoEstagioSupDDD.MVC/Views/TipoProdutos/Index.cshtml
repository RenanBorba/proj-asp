@model IEnumerable<ProjetoEstagioSupDDD.MVC.Models.TipoProdutoViewModel>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tipos dos Produtos</h2>
<p>
    @Ajax.ActionLink("Novo Tipo de Produto", "Inserir", "TipoProdutos", null, new AjaxOptions()
    {
        HttpMethod = "get",
        InsertionMode = InsertionMode.Replace
    })

    |@Ajax.ActionLink("Relatório Tipos Gerais", "ListagemTipo", "Relatorios", null, new AjaxOptions()
    {
       HttpMethod = "get",
       InsertionMode = InsertionMode.Replace
    })
</p>

<p>
    Pesquisar por Descrição:
    @using (Html.BeginForm("Index", "TipoProdutos", FormMethod.Get))
    {
        @Html.TextBox("Pesquisa")
        <input type="submit" class="btn-sm" value="Pesquisar" />
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DescricaoTipo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoTipo)
            </td>
            <td>
                @Ajax.ActionLink("Alterar", "Alterar","TipoProdutos",
                   new { id = item.IdTipoProduto }, new AjaxOptions()
                   {
                       HttpMethod = "get",
                       InsertionMode = InsertionMode.Replace
                   })

                |@Ajax.ActionLink("Excluir", "Excluir", "TipoProdutos",
                   new { id = item.IdTipoProduto }, new AjaxOptions()
                   {
                       HttpMethod = "get",
                       InsertionMode = InsertionMode.Replace
                   })
            </td>
        </tr>
    }
</table>
<hr />
